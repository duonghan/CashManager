<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/txt_title_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_title_overview_hint"
            android:layout_below="@id/txt_title_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to view full report"
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_black_24dp"/>
        
        <View
            android:id="@+id/first_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txt_title_overview_hint"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/txt_inflow"
            android:layout_below="@id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inflow"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_outflow"
            android:layout_below="@id/txt_inflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Outflow"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_inflow_value"
            android:layout_below="@id/first_line"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inflow"
            android:textColor="@color/tb_tiffany_blue"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_outflow_value"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/txt_outflow"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outflow"
            android:textColor="@color/red"
            android:textSize="17sp"/>

        <View
            android:id="@+id/last_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txt_outflow"
            android:layout_alignParentEnd="true"
            android:layout_width="200dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/txt_summary_value"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/last_line"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>