<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/lv_cash_item_wrapper"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="20/05/2018"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_date_value"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/txt_date"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="450000"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/first_line_1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Divider"
            android:layout_below="@id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <ListView
            android:id="@+id/lv_cash_item"
            android:layout_below="@id/first_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>